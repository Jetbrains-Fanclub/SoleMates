@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ProductItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="da">
<head>
    @await Html.PartialAsync("Head")
</head>
<body>
    @await Html.PartialAsync("Header")
    <br>
    <br>

    <main class="md-8" style="margin: auto;">
        <div class="row">
            <img src="https://placehold.co/400x200" class="col-7 col">
            <div class="col-5 col">
                <h2 class="margin-none">@Model.Name.Replace("_", " ")</h2>
                <h3 class="margin-none"><small>@Model.Price DKK</small></h3>

                <br>
                @* Pictures *@
                <img src="https://placehold.co/100x80" style="display: inline-block">
                <img src="https://placehold.co/100x80" style="display: inline-block">

                <br><br>

                @* Sizes *@
                <label>Vælg størrelse</label>
                <select>
                    @foreach (var size in Model.Children)
                    {
                        <option value="@size.Name.ReplaceFirst("Size ", string.Empty)">@size.Name.ReplaceFirst("Size ", string.Empty)</option>
                    }
                </select>

                <br>

                <button>Add to cart</button>
            </div>
        </div>
    </main>

    @await Html.PartialAsync("Footer")
</body>
</html>